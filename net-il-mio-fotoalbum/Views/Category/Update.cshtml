@{
    Layout = "_Layout";
    ViewData["Title"] = "Modifica una categoria";
}

@model Category

<div class="p-5">
    <div class="container bg-light p-3 rounded-3">
        <h1 class="ms-text-orange text-center">Modifica la tua categoria</h1>
        <p class="fs-6 text-center">I campi contrassegnati da * sono obbligatori.</p>
        <form asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label for="name" class="form-label">Nome *</label>
                <input type="text" class="form-control" id="name" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Descrizione</label>
                <input type="text" class="form-control" id="description" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <button type="submit" class="btn btn-success">Salva</button>
        </form>
    </div>
</div>